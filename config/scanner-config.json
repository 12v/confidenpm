{
  "discovery": {
    "maxPackagesPerRun": 20,
    "batchSize": 100,
    "changesFeedUrl": "https://replicate.npmjs.com/_changes",
    "registryUrl": "https://registry.npmjs.org"
  },
  "scanning": {
    "timeoutMs": 120000,
    "maxMemoryMb": 512,
    "maxFileSizeMb": 10,
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      "*.min.js",
      "*.bundle.js",
      "*.map"
    ]
  },
  "security": {
    "enableTrivy": true,
    "enableSemgrep": true,
    "enableTruffleHog": true,
    "enableCustomPatterns": true,
    "enableMetadataAnalysis": true
  },
  "reporting": {
    "minimumRiskLevel": "MEDIUM",
    "createIssuesFor": ["CRITICAL", "HIGH", "MEDIUM"],
    "maxIssuesPerRun": 10
  },
  "riskScoring": {
    "vulnerabilityWeights": {
      "CRITICAL": 40,
      "HIGH": 20,
      "MEDIUM": 8,
      "LOW": 2
    },
    "codeIssueWeights": {
      "HIGH": 15,
      "MEDIUM": 5,
      "LOW": 1
    },
    "secretWeights": {
      "HIGH": 25,
      "MEDIUM": 10,
      "LOW": 3
    },
    "metadataWeights": {
      "HIGH": 10,
      "MEDIUM": 5,
      "LOW": 1
    },
    "thresholds": {
      "CRITICAL": 80,
      "HIGH": 40,
      "MEDIUM": 15,
      "LOW": 0
    }
  }
}